<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/custom_layout_adapter_ncc_list_layoutParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:elevation="@dimen/dp5"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:background="@drawable/adapter_custom_bg"
        android:padding="@dimen/dp5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/custom_layout_adapter_ncc_list_imgViewLogoNCC"
                android:layout_width="100dp"
                android:layout_height="63dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:text="Tên NCC:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:text="Phone:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:text="Địa chỉ:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:id="@+id/custom_layout_adapter_ncc_list_tenNcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:id="@+id/custom_layout_adapter_ncc_list_phoneNcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:id="@+id/custom_layout_adapter_ncc_list_diaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/custom_layout_adapter_ncc_list_imgDeleteItem"
            android:src="@drawable/ic_remove"
            android:layout_width="14dp"
            android:layout_height="14dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>