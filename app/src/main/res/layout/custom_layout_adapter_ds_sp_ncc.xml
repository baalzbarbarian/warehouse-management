<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    android:id="@+id/custom_layout_adapter_employee_list_parentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:elevation="@dimen/dp5"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <ImageView

        android:elevation="10dp"
        android:foregroundTintMode="src_atop"
        android:fitsSystemWindows="true"
        android:id="@+id/imgDelete_xoaSpNcc"
        android:layout_gravity="right"
        android:padding="3dp"
        android:src="@drawable/ic_remove"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <LinearLayout

        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ds_sp_ncc_imgLogoSp"
            android:layout_width="120dp"
            android:layout_height="100dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/ds_sp_ncc_tensp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/dalat"
            android:text="Bia Larue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:id="@+id/ds_sp_ncc_giaSp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/dalat"
            android:text="220000/thÃ¹ng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>