<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/custom_layout_adapter_daily_list_parentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:elevation="@dimen/dp5"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:background="@drawable/adapter_custom_bg"
        android:padding="@dimen/dp5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="2.2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:text="Mã Đại Lý:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:text="Tên Đại Lý:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:text="Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:text="Địa chỉ:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:id="@+id/custom_layout_adapter_daily_list_maDaiLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:id="@+id/custom_layout_adapter_daily_list_tenDaiLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:id="@+id/custom_layout_adapter_daily_list_phoneDaiLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dalat"
                android:id="@+id/custom_layout_adapter_daily_list_diaChiDaiLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/custom_layout_adapter_daily_list_imgRemove"
                android:src="@drawable/ic_remove"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>